{
  "name": "Maidenless Behavior Podcast",
  "short_name": "MB Podcast",
  "description": "Cyberpunk interactive podcast experience inspired by Blade Runner 2049",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#00ffff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["entertainment", "music", "news"],
  
  "icons": [
    {
      "src": "/brand_assets/icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/brand_assets/icon.svg", 
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Listen to Podcast",
      "short_name": "Podcast",
      "description": "Open the main podcast player",
      "url": "/?action=podcast"
    },
    {
      "name": "Music Player",
      "short_name": "Music",
      "description": "Open the iPod music player",
      "url": "/?action=music"
    }
  ],
  

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url"
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+mbpodcast",
      "url": "/?episode=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  
  "prefer_related_applications": false
}