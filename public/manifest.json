{
  "name": "Maidenless Behavior Podcast",
  "short_name": "MB Podcast",
  "description": "Cyberpunk interactive podcast experience inspired by Blade Runner 2049",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#00ffff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["entertainment", "music", "news"],
  
  "icons": [
    {
      "src": "/brand_assets/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/brand_assets/icon-512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Listen to Podcast",
      "short_name": "Podcast",
      "description": "Open the main podcast player",
      "url": "/?action=podcast",
      "icons": [
        {
          "src": "/brand_assets/shortcut-podcast.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Music Player",
      "short_name": "Music",
      "description": "Open the iPod music player",
      "url": "/?action=music",
      "icons": [
        {
          "src": "/brand_assets/shortcut-music.png", 
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "/brand_assets/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/brand_assets/screenshot-narrow.png",
      "sizes": "390x844", 
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url"
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+mbpodcast",
      "url": "/?episode=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  
  "prefer_related_applications": false
}